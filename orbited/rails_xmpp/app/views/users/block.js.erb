var selected_contact_login = '<%= escape_javascript(@contact.login) %>'
var selected_contact = selected_contact_login + '@localhost'

var popupWin = null;
getPopup();
if (!popupWin.closed) {
  popupWin.blockContact(selected_contact);
}

$('tr#' + selected_contact_login).addClass('blocked');
$('tr#' + selected_contact_login + ' td.action_link a').toggleClass('hidden');

